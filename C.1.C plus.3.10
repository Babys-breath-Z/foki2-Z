//使用转义序列
#include<stdio.h>
int main(void)
{
	float s;
	printf("\aEnter your desired monthly salary:");// \a 警报 
	printf(" $_______\b\b\b\b\b\b\b");               // \b 退格； 
	scanf("%f",&s);	                            
	printf("\n\t$%.2f a month is $%.2f a year.", s, s*12.0);// \t 水平制表符 
	printf("\rGee!\n");	// \r 回车 

	
	return 0; 
 } 
 
